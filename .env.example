# =============================================================================
# CTI Scraper Configuration Template
# =============================================================================
# Copy this file to `.env` and customize the values for your environment.
# DO NOT commit your actual `.env` file to version control!

# =============================================================================
# Database Configuration
# =============================================================================

# SQLite Database URL (default: uses local file)
DATABASE_URL=sqlite:///threat_intel.db

# Alternative: PostgreSQL (for production deployments)
# DATABASE_URL=postgresql://username:password@localhost:5432/threat_intel

# =============================================================================
# Application Settings
# =============================================================================

# Application environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# HTTP Client Configuration
# =============================================================================

# User agent string for web requests
USER_AGENT="CTI-Scraper/1.0 (+https://github.com/yourusername/ctiscraper)"

# Default request timeout in seconds
REQUEST_TIMEOUT=30

# Rate limiting: requests per minute per domain
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# Security & API Keys (Optional)
# =============================================================================

# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
# ENCRYPTION_KEY=your-secret-encryption-key-here

# Optional: API keys for enhanced data sources
# VIRUSTOTAL_API_KEY=your-virustotal-api-key
# SHODAN_API_KEY=your-shodan-api-key

# Optional: Webhook URLs for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
